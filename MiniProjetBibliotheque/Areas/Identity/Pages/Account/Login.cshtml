@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

    <div class="text-center">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label class="form-label">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                <div class="checkbox mb-3">
                        <label class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Se souvenir de moi
                        </label>
                    </div>
                </div>
                <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark mb-3">Se connecter</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire en tant que nouvel utilisateur</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer la confirmation par mail</a>
                    </p>
                </div>
            </form>
        </section>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
