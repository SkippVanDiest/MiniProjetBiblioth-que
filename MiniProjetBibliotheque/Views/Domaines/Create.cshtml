@model MiniProjetBibliotheque.Models.Domaine

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Créer un domaine</h1>

<h4>Domaine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="NomDomaine" class="form-control" placeholder="Nom" aria-required="true" />
                <label class="control-label">Nom</label>
                <span asp-validation-for="NomDomaine" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Créer" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
