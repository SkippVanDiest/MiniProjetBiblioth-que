@model MiniProjetBibliotheque.Models.Emprunt
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Emprunter un livre</h1>

<h4>Emprunt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@User.Identity?.Name" />
            <div class="form-floating mb-3">
                <select asp-for="LivreId" class="form-select" placeholder="Titre du livre" asp-items="ViewBag.LivreId"></select>
                <label class="control-label">Titre du livre</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DateEmprunt" class="form-control" placeholder="Date d'emprunt" aria-required="true" />
                <label class="control-label">Date d'emprunt</label>
                <span asp-validation-for="DateEmprunt" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DateRetour" class="form-control" placeholder="Date de retour" aria-required="true" />
                <label class="control-label">Date de retour</label>
                <span asp-validation-for="DateRetour" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Créer" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
