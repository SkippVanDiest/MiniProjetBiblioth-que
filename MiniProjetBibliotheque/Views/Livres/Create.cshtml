@model MiniProjetBibliotheque.Models.Livre

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Créer un livre</h1>

<h4>Livre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Titre" class="form-control" placeholder="Titre" aria-required="true" />
                <label asp-for="Titre" class="control-label"></label>
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="NombrePages" class="form-control" placeholder="Nombre de pages" aria-required="true" />
                <label class="control-label">Nombre de pages</label>
                <span asp-validation-for="NombrePages" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="AuteurId" class="form-select" asp-items="ViewBag.AuteurId"></select>
                <label class="control-label">Auteur</label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="DomaineId" class="form-select" asp-items="ViewBag.DomaineId"></select>
                <label class="control-label">Domaine</label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Créer" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
